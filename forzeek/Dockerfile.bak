FROM alpine:3.8 as builder

#LABEL maintainer "https://github.com/blacktop"
LABEL maintainer "wjcxkfifa2@gmail.com"

ENV ZEEK_VERSION "2.6.1"

RUN echo "===> Install dependents"
RUN apk add --no-cache zlib openssl libstdc++ libpcap libgcc
RUN apk add --no-cache -t .build-deps \
  libmaxminddb-dev \
  linux-headers \
  openssl-dev \
  libpcap-dev \
  python-dev \
  zlib-dev \
  binutils \
  fts-dev \
  cmake \
  clang \
  bison \
  bash \
  swig \
  perl \
  make \
  flex \
  git \
  g++ \
  fts

