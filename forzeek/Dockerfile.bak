RUN echo "===> Copying zeek..."
COPY bro-2.6.1 /tmp/zeek
##COPY cmake /tmp/zeek/cmake

RUN echo "===> Compiling zeek..." \
  && cd /tmp/zeek \
  && CC=clang ./configure --prefix=/usr/local/bro \
  --build-type=MinSizeRel \
  --disable-broker-tests \
#  --disable-zeekctl \ 只有最新开发版才有这个选项
  --disable-broctl \
  --disable-auxtools \
  --disable-python \
  && make -j 2 \
  && make install

